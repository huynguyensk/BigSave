@using BigSave.Web.Models.DataModel;
@model List<MerchantViewModel>
<div class="side-menu side-menu-inner animate-dropdown outer-bottom-xs">
  <div class="head">Stores</div>
  <nav class="yamm megamenu-horizontal">
    <ul class="nav">
      @foreach (var merchant in Model)
      {
        <li class="dropdown menu-item"> <a asp-action="Index" asp-controller="Product" asp-route-merchantId="@merchant.Id" class="dropdown-toggle" data-toggle="dropdown">@merchant.Name</a>
          <ul class="dropdown-menu mega-menu">
            <li class="yamm-content">
              <div class="row">
                <div class="col-xs-12 col-sm-12 col-lg-4">
                  <ul>
                    @{
                      int mid = merchant.Categories.Count / 2;
                      for (int i = 0; i <= mid; i++)
                      {
                        <li><a asp-action="Index" asp-controller="Product" asp-route-merchantId="@merchant.Id" asp-route-categoryId="@merchant.Categories[i].Id">@merchant.Categories[i].Name</a></li>
                      }
                    }

                  </ul>
                </div>
                <div class="col-xs-12 col-sm-12 col-lg-4">
                  <ul>
                    @{
                      int mid2 = merchant.Categories.Count / 2 + 1;
                      for (int j = mid2; j < merchant.Categories.Count; j++)
                      {
                              <li><a asp-action="Index" asp-controller="Product" asp-route-merchantId="@merchant.Id" asp-route-categoryId="@merchant.Categories[j].Id">@merchant.Categories[j].Name</a></li>
                      }
                    }
                  </ul>
                </div>
                <div class="dropdown-banner-holder"> <a asp-action="Index" asp-route-merchantId="@merchant.Id"><img alt=""
                      src="@merchant.LogoFile"></a> </div>
              </div>
              <!-- /.row -->
            </li>
            <!-- /.yamm-content -->
          </ul>
          <!-- /.dropdown-menu -->
        </li>
        <!-- /.menu-item -->
      }
    </ul>

    <!-- /.nav -->
  </nav>
  <!-- /.megamenu-horizontal -->
</div>