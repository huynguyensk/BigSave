@using BigSave.Web.Models.DataModel;
@model List<MerchantViewModel>
<div class="brand-area pt-26 pb-30">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title mb-30">
                            <div class="title-icon">
                                <i class="fa fa-crop"></i>
                            </div>
                            <h3>Our Merchants</h3>
                        </div> <!-- section title end -->
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="brand-active slick-padding slick-arrow-style">
                            @foreach (var merchant in Model)
                            {
                                <div class="brand-item text-center">
                                <a asp-action="Index" asp-route-merchantId="@merchant.Id" asp-controller="Product"><img src="@merchant.LogoFile" alt=""></a>
                            </div>
                            }                           
                        </div>
                    </div>
                </div>
            </div>
        </div>